<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProfileFragment">

        <View
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/white"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/frame_2"
            android:layout_width="177dp"
            android:layout_height="38dp"
            android:background="@drawable/discover_bar"
            android:clipToOutline="true"
            android:fontFamily="@font/outfitlight"
            android:gravity="center_horizontal|top"
            android:text="@string/profile_page"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal|top"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.027" />

        <Button
            android:id="@+id/settingButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="top|end"
            android:layout_marginEnd="35dp"
            android:background="@drawable/setting"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"

            app:layout_constraintStart_toEndOf="@+id/frame_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.015" />

        <ImageView
            android:id="@+id/ivUserProfilePhoto"
            android:layout_width="126dp"
            android:layout_height="120dp"
            android:layout_marginStart="133dp"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/user_profile_photo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frame_2" />

        <TextView
            android:id="@+id/tvUserFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Name will show here"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="@font/outfitregular"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivUserProfilePhoto" />

        <Button
            android:id="@+id/preferenceButton"
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:background="@drawable/black_button"
            android:text="@string/preference"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.877"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvUserFirstName"
            app:layout_constraintVertical_bias="0.078" />

        <Button
            android:id="@+id/editProfileButton"
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:background="@drawable/black_button"
            android:fontFamily="@font/outfitregular"

            android:text="@string/editProfile"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/preferenceButton"
            app:layout_constraintHorizontal_bias="0.455"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvUserFirstName"
            app:layout_constraintVertical_bias="0.078" />

        <Button
            android:id="@+id/tipCenter"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/big_rectangle"
            android:text="@string/tipCenter"
            android:fontFamily="@font/outfitregular"

            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/preferenceButton"
            app:layout_constraintHorizontal_bias="0.455"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvUserFirstName"
            app:layout_constraintVertical_bias="0.389" />

        <Button
            android:id="@+id/helpCeter"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/big_rectangle"
            android:text="@string/helpCenter"
            android:textColor="@android:color/black"
            android:fontFamily="@font/outfitregular"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.877"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvUserFirstName"
            app:layout_constraintVertical_bias="0.389" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>

